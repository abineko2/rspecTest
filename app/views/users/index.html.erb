<p id="notice"><%= notice %></p>

<h1>名簿</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>指名</th>
      <th>年齢</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.age %></td>
        <td><%= link_to '詳細', user, class:'btn btn-secondary' %></td>
        <td><%= link_to '編集', edit_user_path(user), class:'btn btn-primary' %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規登録', new_user_path, class: 'btn btn-primary' %>
